/**index.wxss**/
.container {
  min-height: 100%;
  margin: 0;
  color: #F7F6F5;
  background: #626A9F;
}

canvas {
  height: 100%;
  width: 100%;
}

/**app.wxss**/
page{
  width:100%;
  height:100%;
}

.title {
  background: #4C548B;
  padding:.5rem .3rem;
  margin: 0;
  color: #fff;
}

.sub-title {
  float: right;
  display: block;
}

.category-container {
  display: block;
  padding: 0 .3rem;
}

.category-group {
  display: block;
}

.category-group .category-item {
  display: inline-block;
  width: 25%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  padding: 0 3px;
  box-sizing: border-box;
}

.category-item.hot {
  color: #D99368;
}